<Window xmlns="https://github.com/avaloniaui" MinWidth="500" MinHeight="300"
        Title="Editor"
        >
    <DockPanel>
        <ListBox Name="ListBox" DockPanel.Dock="Left" Items="{Binding CompletionSet.Completions}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding DisplayText}" FontSize="20"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <TextBox Name="TextBox" Text="{Binding Text, Mode=TwoWay}" FontSize="20"
                 AcceptsReturn="True" AcceptsTab="True" />
    </DockPanel>
</Window>